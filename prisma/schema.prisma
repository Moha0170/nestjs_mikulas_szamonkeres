generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Jatek {
  id Int @id @default(autoincrement())
  name String
  material Material
  weight Int
}

model Children {
  id Int @id @default(autoincrement())
  name String
  country String
  city String
  zipCode Int
  streetName String
  streetType String
  houseNumber Int
  floor Int
  apartmant Int
  wasGood Boolean
}

enum Material {
  wood
  metal
  plastic
  other
}